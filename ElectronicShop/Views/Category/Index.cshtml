@model List<ElectronicShopBL.ViewModels.CategoryVM>
@using Microsoft.AspNetCore.Http
@using static ElectronicShopBL.Helper.helper;
@{
    ViewData["Title"] = "Index";
}
@{
    var CurrentUserId = Html.ViewContext.HttpContext.Session.GetInt32("CurrentUserId");
    var CurrentUserRole = Html.ViewContext.HttpContext.Session.GetInt32("UserRole");
    if (CurrentUserId.HasValue)
    {
        ViewBag.UserName = Html.ViewContext.HttpContext.Session.GetString("UserName");
    }
}

<style>
    #customersList {
        margin-top: 50px;
    }
</style>
<div>
    <h1>Categories</h1>
    <hr />
</div>
@if (CurrentUserRole == (int)Roles.Admin)
{
    <div>
        <a class="btn btn-success" asp-action="Create" asp-controller="Category">Add Category</a>
    </div>
}



<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<div class="container" id="customersList">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th> NameAr </th>
                    <th> NameEn</th>
                    <th>Created Date</th>
 
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.nameAr</td>
                        <td>@item.nameEn</td>
                        <td>@item.createdDate</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $('#example').dataTable({
    });
</script>


